--Paso 1 CREAR LA TABLA
CREATE TABLE USUARIO_XXX (ID_USUARIO INTEGER, NOMBRE VARCHAR2(30),EDAD INTEGER, CONSTRAINT PK_ID_USUARIO PRIMARY KEY (ID_USUARIO)); 
--/PASO 2 GENERAR EL DISPARADOR
CREATE OR REPLACE TRIGGER disp_usuario_xxx BEFORE INSERT ON USUARIO_XXX
FOR EACH ROW
BEGIN
--La logica va despues del begin
IF :NEW.EDAD <18 THEN 
RAISE_APPLICATION_ERROR(-20001, "eres menor de edad");
end if
end;
