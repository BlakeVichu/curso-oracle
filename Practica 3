1 set serveroutput on; 2  3 -- RECAPITULANDO LO QUE ES UN BLOQUE PL/SQL 4  5 DECLARE            --DECLARAN LAS VARIABLES QUE VAMOS A USAR  6 nombre varchar2 (20):= ' Victor';            -- INICIALIZAR := ''; 7 BEGIN       --LOGICA DEL PROGRAMA  8 DBMS_OUTPUT.PUT_LINE('BUENAS NOCHES'|| nombre);       --DATABASEM    || CONCATENACION UN VARCHAR CON UNA VARIABLE QUE TAMBIEN ES VARCHAR 9 END; 10 / 11  12 -- BLOQUE PL/SQL QUE CALCULE LA EDAD EN DIAS.  13  14 DECLARE  15 edad integer:= 21; 16 dias integer; 17 estatus varchar2 (12); 18 BEGIN 19 dias:= edad*365; 20  21 -- ESTRUCTURA DE CONTROL DEL IF  22 IF DIAS > 10000 THEN  23   estatus:= 'VIEJO'; 24 ELSE 25   estatus:= 'JOVEN'; 26 END IF; 27  28 DBMS_OUTPUT.PUT_LINE('Tu edad en dias es ' || dias || ' ESTAMOS:' || estatus);     -- SIEMPRE SE CONCATENA 29 END; 30 /  31  32 -- VEREMOS NUESTRO PRIMER PROCEDIMIENTO ALMACENADO  33  34 create or replace procedure saludar(mensaje in varchar2)       -- 35 AS      36 BEGIN  37 DBMS_OUTPUT.PUT_LINE(' HOLA BUENAS NOCHES' ||mensaje); 38 END; 39 / 40  41  42 -- EJECUTAMOS EL PROCEDIMIENTO 43  44 exec saludar (' Blake '); 45  46  47 -- CREAMOS LA SECUNCIA  48  49 create sequence sec_persona    -- Secc y el nombre de la TABLA 50 start with 1   --Puede empezar en 1 51 increment by 1 --Incremento en 1 52 nomaxvalue;    --Pueden ser millones de personas  53  54 -- CREAMOS LA TABLA 55  56 create table persona(ID_persona integer, nombre varchar2 (20), edad integer, constraint pk_id_persona 57 primary key (ID_PERSONA));   --CONSTRAINT ES RESTRICCION  por cada CLAVE PK O FK va un constraint separado. Siempre va antes de la PK 58  59 -- OUT Dato de salida, se genera. PK  60 -- IN Ingresar datos (Alimenta la BD) TODOS LOS DEMAS DATOS DE LA TABLA 61 create or replace procedure guardar_persona(my_id out integer, my_nombre in varchar2, my_edad in integer) 62 AS  63 BEGIN 64  65 select sec_persona.nextval INTO my_id from DUAL; insert into persona values (my_id, my_nombre, my_edad); 66 END; 67 / 68  69 declare  70 valor integer; 71 begin  72 guardar_persona(valor, 'Victor',21); 73 end; 74 / 75 select * from persona; 
